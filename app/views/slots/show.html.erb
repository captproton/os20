    	<div id="ylf-relatedlinks" class="line cls post-cols">
    		<div class="col hlf-w full-w">
  				<h3>related  slots (jobs with similar interests will go here)</h3>
				<ol>
					<%# render :partial => 'related', :collection => @related %>
				</ol>
    		</div>
    		<div class="col hlf-e hlf-hidden">
  				
    		</div>
    	</div>
  	
			      <div id="ylf-cmnts" class="mod">
      	<h2 id="comments">From the Community…</h2>
		<div class="spgnav cls">
		    		<div class="count"><%= pluralize(@remarks.size, "Comment") %> </div>

		    	</div>
				<ul class="thumbs">      
					<% if !@remarks.blank? %>
					  <% for remark in @remarks %>
							<% remark_user_id = 2 %>
							<% remark_login = User.find(remark_user_id).login %>
						<li>
		      				<a href="" class="img"><img width="32" height="32" src="/images/userIconBig.gif" alt="<%= remark_login %>'s Avatar" class="lz" /></a>
		      				<div class="txt">
		      					<cite>Posted by 
									<a href="/" >
										<span class="author"> <%= remark_login %></span>
									</a> 
									<span class="rel-time" title="<%= remark.updated_at %>"><%= time_ago_in_words(remark.updated_at) %> ago</span>
								</cite>
		      					<blockquote>
		      						<p><%= remark.body %></p>
		      					</blockquote>
								<!-- <a href="/" class="abuse">Report Abuse</a> -->
			      			</div>
		      			</li>      		
					
					  <% end %>
					<% else %>
					  <p>Be the first to comment on this post.</p>
					<% end %>
							
				</ul>
    	<div class="spgnav cls">
			<div class="count"><%# pluralize(@remarks.size, "Comment") %> </div>

		
		</div>
			<div id="cmt-form" class="cls">
				<h3 id="postcomment">leave your comment</h3>
				<p>
					<%= link_to "Click here",       new_slot_remark_path(:slot) %>
				</p>
				
		
			<p class="disclaimer">The information you provide on this page will be displayed publicly along with your display image and nickname.</p>
		</div>

	</div>
				
