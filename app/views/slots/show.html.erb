<div id="ylf-blogpost" class="cls">
	

	<div class="post-hdr cls">
		<div class="post-title cls">
			<h1><%=h @slot.title %></h1>
			
		</div>
		<div class="attr cls readmore">
			<a href="/blog/anwouQPymWso8WG8iFqtnw91mGyHG6_dA8GqYShs7YWtKiQvg/"><img src="http://f3.yahoofs.com/coreid/48081d11i5fbzul2sp1/RZiYObMjdKWKE.pfuJaRG6G3tXfJU5p20RiecdA-/1/tn32.jpg?ciAwiiJBD7xNDS7c" height="32" width="32"></a>
			<ul>
				<li>Last updated by <%= link_to current_user.login, user_path(current_user) %>, <span class="rel-time" title="<%= @slot.updated_at %>"><%= time_ago_in_words(@slot.updated_at) %> ago</span></li>
			</ul>
			<ul>
				
				<li><a href="#postcomment" class="cmt-lnk">Post a Comment</a></li>
				<!-- <li class="last"><a href="/">Report Abuse</a></li> Enable after plugin installed -->
			</ul>
		</div>
	</div>

  	
  
	<div class="post-body cls">
<%= @slot.body %>
	</div>

	

	<p class="related"><strong>Related:</strong> 
		<% if !@slot.topic_list.blank? %>
		  <% for item in @slot.topic_list %>
			<% @tag = Tag.find_by_name(item) %>
		    <%= link_to item, topic_path(@tag.id) %>
		  <% end %>
		<% else %>
		  	none
		<% end %>
		
	</p>

</div>


	
