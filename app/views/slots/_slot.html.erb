<tr class="<%# slot.status %>" id="slot_<%= slot.id %>">
  <td><%# image_tag "mephisto/icons/#{status_icon[slot.status][1]}", :class => "#{status_icon[slot.status][0]} icon", :title => "This slot is #{slot.status}", :alt => "#{slot.status}" %></td>
  <td class="slot_title"><%= link_to(slot.title, {:action => 'edit', :id => slot}) %></td>
  <td class="ccount">
    <%# if slot.comments.size == 0 %>
      none
    <%# else %>
      <%# link_to slot.comments.size.to_s.rjust(2, '0'), slot_comments_path(slot) %>
    <%# end %>
  </td>
  <td><span class="date"><%# published_at_for slot %></span></td>
  <td><%= slot.published? ? link_to(image_tag('/images/mephisto/icons/24-zoom-in.png', :style => 'vertical-align: middle'), @site.permalink_for(slot)) : '&nbsp;' %></td>
</tr>
