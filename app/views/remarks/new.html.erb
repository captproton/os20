<h1>New remark</h1>

<% form_for [@remarkable, @remark] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>

	<%= f.hidden_field :remarkable_id, :value => @remarkable.id %>
	<%= f.hidden_field :remarkable_type, :value => @remarkable.class %>
</p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', slot_remarks_path(@remarkable) %>
